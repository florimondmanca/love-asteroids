#!/bin/sh

# edit your LÃ–VE app file path below
LOVE="~/Applications/Programmation/love.app/Contents/MacOS/love"

echo "Love file name [app.love]:"
read filename
if [[ -z "$filename" ]]; then
    filename="app.love"
fi
echo "Bundling into $filename..."
cd src
zip -r ../"$filename" *
cd ..
eval $LOVE "$filename"
